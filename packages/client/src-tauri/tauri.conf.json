{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chatbot Desktop",
  "version": "0.1.0",
  "identifier": "com.chatbot.client",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Chatbot Desktop",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
