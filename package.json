{
  "name": "chat-desktop-app-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for a chat desktop app using Tauri, React, Hono and langchain.",
  "author": "Mio",
  "license": "MIT",
  "keywords": [
    "tauri",
    "react",
    "hono",
    "langchain",
    "shadcn",
    "typescript",
    "bun",
    "chat",
    "desktop-app",
    "boilerplate"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun --filter 'server' dev\" \"bun --filter 'client' tauri dev\"",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,jsonc,css}": [
      "biome check --write --no-errors-on-unmatched --diagnostic-level=error"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "shadcn": "^3.6.1"
  }
}
